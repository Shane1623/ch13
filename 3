public static void main(String[] args) {
    int num = 12, den = 0;

    try {
        if (den != 0) {
            int ans = num / den;
            System.out.println("Answer: " + ans);
        } else {
            System.out.println("除數為0");
        }
    } catch (ArithmeticException e) {
        System.out.println("Arithmetic Exception: " + e.getMessage());
    } finally {
        System.out.println("End of main()!!");
    }
}

